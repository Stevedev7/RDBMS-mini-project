
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 style="text-align: center; margin: 25px 0px 7px 0px">Add a new comment to<%= item[0].Name %></h1>
        </div>
        <div class="" style="width: 50%; margin: 0px auto">
            <form class="" action="/items/<%= item[0]._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" value="" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button style="background-color: #78bcc4; color: #f7f8f3" class="btn btn-lg btn-block" type="submit">Add comment</button>
                </div>
            </form>
        </div>
    </div>
</div>
