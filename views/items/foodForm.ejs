
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="form-title">Add a new food item</h1>
        </div>
        <div class="form-div" >
            <form class="" action="/items" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="" placeholder="Image url">
                </div>
                <div class="form-group">
                    <input type="radio" name="type1" value="Veg" checked> Veg<br>
                    <input type="radio" name="type1" value="Non-veg"> Non-veg
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Category</label>
                    <select name="type2" class="form-control" id="exampleFormControlSelect1">
                      <option value="Starters">Starters</option>
                      <option value="Main course">Main course</option>
                      <option value="Dessert">Dessert</option>
                    </select>
                  </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="price" value="" placeholder="Price">
                </div>

                <div class="form-group">
                    <textarea name="description" placeholder="Description"class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn-success btn btn-block" type="submit" name="type" value="food">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
