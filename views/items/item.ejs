<% include ../partials/header %>
<% include ../partials/infobar %>
<div class="menu">
    <div class="menu__header" style="background-image: url('<%= item[0].Image %></div>');">
        <div class="menu__header__inner">
            <div class="container">
                <h1 class="menu__header__title"><%= item[0].Name %></h1>
            </div>
        </div>
    </div>
    <div class="menu__body">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-9">
                    <p><%= item[0].Description %></p>
                    <div class="row">
                        <% if(type === 'food'){ %>
                                <div class="col-sm-12 col-md-6 col-lg-6">
                                <ul class="list-group" style="margin-bottom: 5px">
                                    <li class="list-group-item"><%= item[0].Category %></li>
                                </ul>
                            </div>
                        <% } %>
                        <div class="col-sm-12 col-md-6 col-lg-6">
                            <ul class="list-group" style="margin-bottom: 5px">
                                <li class="list-group-item"><%= item[0].DietaryPreference %></li>
                            </ul>
                        </div>
                    </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="form-group ">
                                    <input class="form-control" type="number" name="qty" value=""
                                        placeholder="quantity">
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div class="form-group ">
                                    <button class="btn-success btn btn-block" type="submit" name="button">Order</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="col-sm-12 col-md-3">
                    <% comments.forEach(comment => { %>
                    <p><strong><%= comment.UserName %></strong> - <%= comment.Text %></p>
                    <% }); %>
                    <form class="" action="/items/<%= item[0]._id %>/comments" method="post">
                        <div class="form-group">
                            <input class="form-control" type="text" name="text" value="" placeholder="Comment">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-sm btn-block btn-outline-primary">Add comment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
